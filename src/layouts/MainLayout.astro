---
import '../styles/global.css';
import Navbar from '../components/structure/Navbar.astro';
import Footer from '../components/structure/Footer.astro';
import SEO from '../components/structure/SEO.astro';

interface Props {
  title: string;
  description?: string;
  image?: URL;
  keywords?: string; 
}

const { 
  title, 
  description = "硅基能效 - Deconstructing Silicon Efficiency", 
  image,
  keywords = "硅基能效,AI算力,芯片能效,人工智能,算力,GPU,电池技术,机器人,大模型" 
} = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <slot name="seo">
      <SEO title={title} description={description} image={image} />
    </slot>
    <meta name="keywords" content={keywords} />
    <meta name="baidu-site-verification" content="codeva-LaaNzkik4K" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | 硅基能效</title>
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {image && <meta property="og:image" content={image} />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    {image && <meta property="twitter:image" content={image} />}
  </head>
  <body>
    <!-- Background -->
    <div class="grid-bg"></div>

    <!-- Navigation -->
    <Navbar />

    <!-- Main Content -->
    <main style="flex: 1;">
      <slot />
    </main>

    <!-- Footer -->
    <Footer />
  </body>
</html>

<style>
  /* Global Styles injected here if needed, but components carry their own */
</style>
