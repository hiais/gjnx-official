---
import '../styles/global.css';
import Navbar from '../components/structure/Navbar.astro';
import Footer from '../components/structure/Footer.astro';
import SEO from '../components/structure/SEO.astro';
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  image?: URL;
  keywords?: string; 
}

const { 
  title, 
  description = "硅基能效 - Deconstructing Silicon Efficiency", 
  image,
  keywords = "硅基能效,AI算力,芯片能效,人工智能,算力,GPU,电池技术,机器人,大模型" 
} = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <slot name="seo">
      <SEO title={title} description={description} image={image} />
    </slot>
    <meta name="keywords" content={keywords} />
    <meta name="baidu-site-verification" content="codeva-LaaNzkik4K" />
    <!-- Google Search Console: Replace YOUR_CODE with actual verification code -->
    <meta name="google-site-verification" content="PENDING_VERIFICATION" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | 硅基能效</title>
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image || new URL('/assets/og-default.png', Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image || new URL('/assets/og-default.png', Astro.site)} />

    <ClientRouter />
    
    <!-- KaTeX for Math Rendering (Deferred) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" media="print" onload="this.media='all'">
  </head>
  <body>
    <!-- Background -->
    <div class="grid-bg"></div>

    <!-- Navigation -->
    <Navbar />

    <!-- Main Content -->
    <main style="flex: 1;">
      <slot />
    </main>

    <!-- Footer -->
    <Footer />

    <!-- Deferred Scripts -->
    <script is:inline src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.js" defer></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/contrib/auto-render.min.js" defer></script>
    <script is:inline>
      document.addEventListener("astro:page-load", function() {
        if (window.renderMathInElement) {
          renderMathInElement(document.body, {
            delimiters: [
              {left: '$$', right: '$$', display: true},
              {left: '$', right: '$', display: false}
            ],
            throwOnError : false
          });
        }
      });
    </script>
  </body>
</html>

<style>
  /* Global Styles injected here if needed, but components carry their own */
</style>
