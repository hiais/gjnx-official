---
import MainLayout from '../layouts/MainLayout.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Tag from '../components/ui/Tag.astro';
import { getCollection } from 'astro:content';

// Fetch recent articles (Mock data or real)
const allArticles = await getCollection('articles');
const recentArticles = allArticles
  .filter(a => !a.data.draft)
  .sort((a, b) => (b.data.date?.getTime() || 0) - (a.data.date?.getTime() || 0))
  .slice(0, 6);
---

<MainLayout title="首页">
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1 class="text-gradient">Deconstructing<br>Silicon Efficiency</h1>
      <p class="subtitle">
        揭秘芯片、AI与电池技术的能效真相。我们只讲数据，不讲故事。
      </p>
      <div class="hero-actions">
        <Button href="/articles" variant="primary">浏览数据库</Button>
        <Button href="/about" variant="ghost">关于我们</Button>
      </div>
    </div>
  </section>

  <!-- Recent Updates -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <h2>Latest_Intel</h2>
        <Button href="/articles" variant="secondary" size="sm">VIEW_ALL</Button>
      </div>
      
      {recentArticles.length > 0 ? (
        <div class="grid">
          {recentArticles.map(article => (
            <Card href={`/articles/${article.id}`} class="article-card">
              <div class="card-meta">
                <span class="date mono">{article.data.date ? article.data.date.toISOString().split('T')[0] : 'N/A'}</span>
                {article.data.tags?.slice(0, 1).map((tag: any) => (
                  <Tag variant="outline">{tag}</Tag>
                ))}
              </div>
              <h3 class="card-title">{article.data.title}</h3>
              <p class="card-desc">
                {article.data.description?.replace(/<[^>]*>?/gm, '')}
              </p>
            </Card>
          ))}
        </div>
      ) : (
        <div class="empty-state mono">
          > NO_DATA_FOUND<br>
          > SYSTEM_WAITING_FOR_SYNC...
        </div>
      )}
    </div>
  </section>
</MainLayout>

<style>
  .hero {
    padding: var(--space-12) 0;
    text-align: center;
    border-bottom: 1px solid rgba(255,255,255,0.05);
  }
  
  h1 {
    font-size: 4rem;
    line-height: 1;
    margin-bottom: var(--space-6);
  }

  .subtitle {
    font-size: var(--text-h3);
    color: var(--c-text-secondary);
    max-width: 600px;
    margin: 0 auto var(--space-8);
  }

  .hero-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
  }

  .section {
    padding: var(--space-12) 0;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--space-8);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--space-4);
    font-size: var(--text-sm);
  }

  .card-title {
    margin: 0 0 var(--space-2) 0;
    font-size: 1.4rem;
  }

  .card-desc {
    color: var(--c-text-secondary);
    font-size: 0.95rem;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .empty-state {
    text-align: center;
    padding: var(--space-12);
    border: 1px dashed var(--border-light);
    color: var(--c-text-secondary);
  }
</style>
