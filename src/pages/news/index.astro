---
import MainLayout from '../../layouts/MainLayout.astro';
import hotspotsData from '../../data/hotspots.json';
import SectionHeader from '../../components/ui/SectionHeader.astro';

// Use data from JSON
const hotspots = hotspotsData;
---

<MainLayout title="情报雷达 | INTEL_RADAR">
  <div class="intel-page">
    <SectionHeader 
      title="INTEL" 
      ghostTitle="_RADAR" 
      subtitle="实时能效基准热点排行：正在监控全球硅基信号脉冲"
    />

    <div class="container overflow-visible">
      <!-- Leaderboard Column -->

      <!-- Leaderboard Column -->
      <div class="radar-container">
        {hotspots.map((item) => (
          <div class="radar-item">
            <a href={item.link} target="_blank" rel="noopener noreferrer" class="radar-link">
              <div class="radar-card glass-morphism">
                
                <!-- Large Rank Background -->
                <div class="rank-bg mono">{item.rank}</div>
                
                <div class="card-inner">
                  <div class="card-left">
                    <div class="item-meta mono">
                      <span class="cate">{item.category}</span>
                      <span class="sep">|</span>
                      <span class="src">SOURCE: {item.source}</span>
                      {item.trend && (
                        <span class={`trend-pill ${item.trend.startsWith('+') ? 'up' : 'new'}`}>
                          {item.trend}
                        </span>
                      )}
                    </div>
                    <h3 class="item-title">{item.title}</h3>
                    <p class="item-abstract">{item.abstract}</p>
                  </div>

                  <div class="card-right">
                    <div class="pscore-box">
                      <div class="pscore-meta mono">PSCORE_INTENSITY</div>
                      <div class="pscore-row">
                        <span class="pscore-num">{item.pscore}</span>
                        <span class="pscore-unit">%</span>
                      </div>
                      <div class="heat-gauge">
                        <div class="gauge-fill" style={`width: ${item.pscore}%`}></div>
                        <div class="gauge-glow" style={`width: ${item.pscore}%`}></div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="external-corner">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M7 17L17 7M17 7H7M17 7V17"/></svg>
                </div>

              </div>
            </a>
          </div>
        ))}
      </div>

      <!-- Footer Info -->
      <footer class="intel-footer mono">
        > DATA_SOURCE: AGENT_SYSTEM_V6.0<br>
        > LAST_SYNC: {new Date().toLocaleTimeString()}
      </footer>

    </div>

    <!-- Background Decorative Grids -->
    <div class="radar-bg-effects">
      <div class="scan-line"></div>
      <div class="radial-glow"></div>
    </div>
  </div>
</MainLayout>

<style>
  .intel-page {
    background: #020202;
    padding: 0 0 var(--space-20); /* Removed top padding - SectionHeader handles it */
    position: relative;
    min-height: 100vh;
    overflow: hidden;
  }

  /* Leaderboard Styling */
  .radar-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    position: relative;
    z-index: 10;
  }

  .radar-item {
    perspective: 1000px;
  }

  .radar-link {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .radar-card {
    position: relative;
    padding: 1.5rem 2.5rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.04);
    background: rgba(15, 15, 15, 0.4);
    backdrop-filter: blur(30px) saturate(150%);
    overflow: hidden;
    transition: all 0.5s ease;
  }
  
  .radar-link:hover .radar-card {
    border-color: rgba(0, 240, 255, 0.4);
    background: rgba(0, 240, 255, 0.05);
    box-shadow: 0 30px 60px rgba(0,0,0,0.6), 0 0 30px rgba(0, 240, 255, 0.1);
  }

  /* Big Rank Watermark - Fix Z-index and Position */
  .rank-bg {
    position: absolute;
    right: 200px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 8rem;
    font-weight: 900;
    color: rgba(255, 255, 255, 0.015); /* Slightly fainter for density */
    line-height: 1;
    z-index: 0;
    pointer-events: none;
    transition: all 0.6s ease;
    user-select: none;
  }
  .radar-link:hover .rank-bg {
    color: rgba(0, 240, 255, 0.05);
    transform: translateY(-50%) scale(1.1);
  }

  .card-inner {
    position: relative;
    z-index: 2; /* Content above watermark */
    display: grid;
    grid-template-columns: 1fr 180px;
    gap: 2.5rem;
    align-items: center;
  }

  /* Content Styling - Force Reset Link Colors */
  .item-meta {
    font-size: 0.7rem;
    letter-spacing: 0.12em;
    color: rgba(255, 255, 255, 0.4);
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 12px;
  }
  .cate { color: var(--c-accent-cyan); font-weight: 800; text-transform: uppercase; }
  .src { border-left: 1px solid rgba(255, 255, 255, 0.1); padding-left: 16px; }
  
  .trend-pill {
    padding: 2px 10px;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 900;
    text-transform: uppercase;
  }
  .trend-pill.up { background: rgba(0, 255, 136, 0.1); color: #00ff88; border: 1px solid rgba(0, 255, 136, 0.2); }
  .trend-pill.new { background: rgba(255, 170, 0, 0.1); color: #ffaa00; border: 1px solid rgba(255, 170, 0, 0.2); }

  .item-title {
    font-size: 1.4rem;
    font-weight: 800;
    line-height: 1.3;
    color: #ffffff !important; /* Force White */
    margin-bottom: 0.5rem;
    max-width: 98%;
    letter-spacing: -0.01em;
  }
  .item-abstract {
    font-size: 0.9rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.45) !important; /* Force Grey */
    max-width: 95%;
  }

  /* Score & Gauge */
  .pscore-box {
    text-align: right;
    background: rgba(255, 255, 255, 0.02);
    padding: 1rem;
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
  .pscore-meta {
    font-size: 0.65rem;
    color: rgba(0, 240, 255, 0.4);
    letter-spacing: 0.25em;
    margin-bottom: 4px;
  }
  .pscore-row {
    color: #fff !important;
    margin-bottom: 8px;
  }
  .pscore-num { font-size: 2rem; font-weight: 950; font-family: var(--font-mono); }
  .pscore-unit { font-size: 0.8rem; opacity: 0.3; margin-left: 2px; }

  .heat-gauge {
    width: 100%;
    height: 4px;
    background: rgba(255, 255, 255, 0.08);
    position: relative;
    border-radius: 10px;
    overflow: hidden;
  }
  .gauge-fill {
    position: absolute;
    height: 100%;
    background: linear-gradient(90deg, var(--c-accent-cyan), #00ff88);
    z-index: 2;
  }
  .gauge-glow {
    position: absolute;
    height: 100%;
    background: var(--c-accent-cyan);
    filter: blur(8px);
    opacity: 0.6;
    z-index: 1;
  }

  .external-corner {
    position: absolute;
    top: 1.25rem;
    right: 1.5rem;
    opacity: 0.1;
    color: #fff;
    transition: all 0.3s;
  }
  .radar-link:hover .external-corner {
    opacity: 0.8;
    color: var(--c-accent-cyan);
    transform: translate(4px, -4px);
  }

  /* Decoration Effects */
  .radar-bg-effects {
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    pointer-events: none;
    z-index: 1;
  }
  .scan-line {
    position: absolute;
    width: 100%; height: 2px;
    background: linear-gradient(90deg, transparent, rgba(0, 240, 255, 0.15), transparent);
    top: -10%;
    animation: globalScan 6s linear infinite;
  }
  @keyframes globalScan {
    100% { top: 110%; }
  }
  .radial-glow {
    position: absolute;
    width: 80%; height: 80%;
    background: radial-gradient(circle at 50% 50%, rgba(0, 240, 255, 0.05) 0%, transparent 70%);
    top: 10%; left: 10%;
  }

  .intel-footer {
    margin-top: 8rem;
    padding: 3rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    font-size: 0.75rem;
    color: rgba(255,255,255,0.2);
    line-height: 2;
    letter-spacing: 0.05em;
  }

  /* Responsive Mobile */
  @media (max-width: 1024px) {
    .card-inner { grid-template-columns: 1fr; gap: 3rem; }
    .pscore-box { text-align: left; max-width: 200px; }
    .radar-card { padding: 2.5rem; }
    .item-title { font-size: 1.5rem; }
    .rank-bg { font-size: 6rem; left: 1rem; }
  }
</style>


