---
import Layout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allArticles = await getCollection('articles');
  
  // 1. Get all unique tags
  const uniqueTags = [...new Set(allArticles.map((post) => post.data.tags || []).flat())];

  // 2. Generate paths for each tag
  return uniqueTags.map((tag) => {
    const filteredPosts = allArticles.filter((post) => (post.data.tags || []).includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;

// Sort by date desc
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.date || 0).valueOf() - new Date(a.data.date || 0).valueOf()
);
---

<Layout title={`#${tag} | 硅基能效`} description={`关于 ${tag} 的深度技术分析和评测文章。`}>
  <main class="page-container">
    
    {/* Header */}
    <div class="header-section">
        <div class="system-label">/// FILTER MODE ACTIVE</div>
        <div class="header-content">
            <h1 class="page-title">
                <span class="hash">#</span>{tag}
            </h1>
            <a href="/tags" class="back-link">
                &larr; ALL TAGS
            </a>
        </div>
    </div>

    {/* Post List */}
    <div class="post-list">
      {sortedPosts.map((post) => (
        <article class="post-card">
          <div class="accent-line"></div>
          
          <a href={`/articles/${post.id}`} class="card-link">
            <div class="card-header">
               <h2 class="card-title">{post.data.title}</h2>
               <span class="card-date">
                 {post.data.date ? new Date(post.data.date).toLocaleDateString() : 'N/A'}
               </span>
            </div>

            <p class="card-desc">
              {post.data.description}
            </p>

            <div class="card-tags">
              {(post.data.tags || []).map(t => (
                <span class={`mini-tag ${t === tag ? 'active' : ''}`}>#{t}</span>
              ))}
            </div>
            
            <div class="arrow-icon">&rarr;</div>
          </a>
        </article>
      ))}
    </div>
    
    {sortedPosts.length === 0 && (
        <div class="empty-state">
            <p>No data found in this sector.</p>
        </div>
    )}

  </main>
</Layout>

<style>
  .page-container {
    padding-top: 8rem;
    padding-bottom: 3rem;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    max-width: 56rem;
    margin: 0 auto;
    min-height: 100vh;
  }

  /* Header */
  .header-section {
    margin-bottom: 4rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 2rem;
  }
  .system-label {
    color: var(--c-accent-cyan, #00f0ff);
    font-family: monospace;
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
    opacity: 0.8;
  }
  .header-content {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
  }
  .page-title {
    font-size: 3rem;
    font-weight: 700;
    color: white;
    display: flex;
    align-items: center;
    line-height: 1;
  }
  .page-title .hash {
    color: #666;
    margin-right: 0.5rem;
    user-select: none;
  }
  .back-link {
    color: #888;
    font-family: monospace;
    font-size: 0.875rem;
    text-decoration: none;
    transition: color 0.2s;
  }
  .back-link:hover {
    color: var(--c-accent-cyan, #00f0ff);
  }

  /* Post List */
  .post-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-card {
    position: relative;
    background-color: #0a0a0a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  .post-card:hover {
    border-color: rgba(0, 240, 255, 0.5);
    box-shadow: 0 0 20px rgba(0, 240, 255, 0.1);
  }

  .accent-line {
    position: absolute;
    top: 0; bottom: 0; left: 0;
    width: 4px;
    background-color: #164e63; /* cyan-900 */
    transition: background-color 0.3s;
  }
  .post-card:hover .accent-line {
    background-color: var(--c-accent-cyan, #00f0ff);
  }

  .card-link {
    display: block;
    padding: 2rem;
    padding-left: 2.5rem;
    text-decoration: none; /* Crucial */
    color: inherit;
  }

  .card-header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }
  @media (min-width: 768px) {
    .card-header {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #f3f4f6;
    margin: 0;
    line-height: 1.2;
    transition: color 0.2s;
  }
  .post-card:hover .card-title {
    color: var(--c-accent-cyan, #00f0ff);
  }

  .card-date {
    font-family: monospace;
    font-size: 0.75rem;
    color: #6b7280;
    border: 1px solid rgba(255,255,255,0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    background: black;
    white-space: nowrap;
  }

  .card-desc {
    color: #9ca3af;
    font-size: 0.875rem;
    line-height: 1.6;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    max-width: 90%;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .mini-tag {
    font-size: 0.65rem;
    text-transform: uppercase;
    font-family: monospace;
    padding: 2px 6px;
    border-radius: 4px;
    border: 1px solid rgba(255,255,255,0.05);
    background: #151515;
    color: #666;
  }
  .mini-tag.active {
    background: rgba(0, 70, 80, 0.3);
    color: var(--c-accent-cyan, #00f0ff);
    border-color: rgba(22, 78, 99, 0.5);
  }

  .arrow-icon {
    position: absolute;
    right: 1.5rem;
    bottom: 1.5rem;
    color: var(--c-accent-cyan, #00f0ff);
    opacity: 0;
    transition: opacity 0.3s;
    font-size: 1.2rem;
  }
  .post-card:hover .arrow-icon {
    opacity: 1;
  }
  
  .empty-state {
      text-align: center;
      padding: 5rem 0;
      border: 1px dashed #333;
      border-radius: 4px;
      color: #666;
  }
</style>
