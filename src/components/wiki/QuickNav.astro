---
/**
 * Wiki快速导航组件
 * 显示当前位置和快速跳转链接
 */

interface Props {
  currentPath: string;
  items: Array<{ label: string; href: string; active?: boolean }>;
}

const { currentPath, items } = Astro.props;
---

<nav class="quick-nav mono">
  {items.map(item => (
    <a 
      href={item.href}
      class:list={['nav-item', { 'active': item.active || item.href === currentPath }]}
    >
      {item.label}
    </a>
  ))}
</nav>

<style>
  .quick-nav {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-4);
    background: rgba(10, 10, 10, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    margin-bottom: var(--space-6);
    flex-wrap: wrap;
  }

  .nav-item {
    color: var(--c-text-secondary);
    text-decoration: none;
    font-size: 0.85rem;
    padding: var(--space-2) var(--space-4);
    border-radius: 3px;
    transition: all 0.2s;
    position: relative;
  }

  .nav-item:hover {
    color: var(--c-accent-cyan);
    background: rgba(0, 240, 255, 0.05);
  }

  .nav-item.active {
    color: var(--c-accent-cyan);
    background: rgba(0, 240, 255, 0.1);
    border: 1px solid var(--c-accent-cyan);
  }

  .nav-item.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 2px;
    background: var(--c-accent-cyan);
    box-shadow: 0 0 8px var(--c-accent-cyan);
  }
</style>

