<div class="calculator-card">
  <div class="header">
    <span class="icon">⚡</span>
    <h3>能效推演计算器</h3>
  </div>
  
  <div class="display-area">
    <div class="row">
      <label>芯片架构 / Chipset</label>
      <select id="chipset-select">
        <option value="1.0">Snapdragon 8 Gen 4 (Nuvia)</option>
        <option value="0.8">Apple A19 Pro</option>
        <option value="1.2">Dimensity 9400+</option>
      </select>
    </div>

    <div class="row">
      <label>负载场景 / Workload</label>
      <div class="slider-container">
        <input type="range" min="1" max="10" value="5" class="slider" id="workload-slider">
        <span class="value mono" id="workload-val">MEDIUM</span>
      </div>
    </div>

    <div class="result-box">
      <div class="metric">
        <span class="label">功耗预测</span>
        <span class="val mono"><span id="power-val">4.5</span> W</span>
      </div>
      <div class="metric">
        <span class="label">能效得分</span>
        <span class="val mono highlight" id="score-val">92.4</span>
      </div>
    </div>
  </div>

  <div class="cta-overlay">
    <p>解锁并联电池与完整光追测试模型</p>
    <a href="#" class="wechat-btn" onclick="alert('请关注公众号【硅基能效】回复【计算器】获取解锁码')">
      关注公众号解锁 Pro 版
    </a>
  </div>
</div>

<style>
  .calculator-card {
    background: var(--c-bg-card);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    max-width: 400px;
    position: relative;
    overflow: hidden;
    box-shadow: 0 20px 50px rgba(0,0,0,0.5);
  }

  .header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    border-bottom: 1px dashed rgba(255,255,255,0.1);
    padding-bottom: 1rem;
  }
  
  .header h3 {
    margin: 0;
    font-size: 1.1rem;
    color: var(--c-text-primary);
  }

  .row {
    margin-bottom: 1.2rem;
  }

  label {
    display: block;
    font-size: 0.8rem;
    color: var(--c-text-secondary);
    margin-bottom: 0.5rem;
    font-family: var(--font-mono);
  }

  select, input[type="range"] {
    width: 100%;
    background: var(--c-bg-panel);
    border: 1px solid rgba(255,255,255,0.2);
    color: white;
    padding: 0.5rem;
    border-radius: 4px;
    outline: none;
  }

  .result-box {
    display: flex;
    justify-content: space-between;
    background: rgba(0, 240, 255, 0.05);
    padding: 1rem;
    border-radius: 6px;
    margin-top: 1.5rem;
    border-left: 2px solid var(--c-accent-cyan);
  }

  .metric {
    display: flex;
    flex-direction: column;
  }

  .metric .label {
    font-size: 0.7rem;
    color: var(--c-accent-cyan);
    margin-bottom: 0.2rem;
  }

  .metric .val {
    font-size: 1.2rem;
    font-weight: bold;
  }

  .highlight {
    color: var(--c-accent-cyan);
    text-shadow: 0 0 10px rgba(0,240,255,0.3);
  }

  /* The hook */
  .cta-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(10,10,10, 0.9);
    backdrop-filter: blur(4px);
    padding: 1.5rem;
    text-align: center;
    transform: translateY(100%);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-top: 1px solid var(--c-accent-amber);
  }

  .calculator-card:hover .cta-overlay {
    transform: translateY(0);
  }

  .cta-overlay p {
    font-size: 0.9rem;
    margin-bottom: 1rem;
    color: var(--c-text-primary);
  }

  .wechat-btn {
    background: var(--c-accent-amber);
    color: black;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-weight: bold;
    font-size: 0.9rem;
  }
</style>

<script>
  // Simple interaction logic (Client-side JS)
  const slider = document.getElementById('workload-slider');
  const powerVal = document.getElementById('power-val');
  
  if (slider && powerVal) {
    slider.addEventListener('input', (e) => {
      // Dummy logic for demonstration
      const val = (e.target as HTMLInputElement).value;
      const power = (parseInt(val) * 0.8 + 0.5).toFixed(1);
      powerVal.innerText = power;
    });
  }
</script>
