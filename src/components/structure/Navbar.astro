---
const links = [
  { label: '首页', href: '/' },
  { label: '深度专栏', href: '/articles' },
  { label: '情报站', href: '/news' },
  { label: '通识', href: '/knowledge' },
  { label: '数据库', href: '/database' },
  { label: '资源库', href: '/resources' },
];
---

<nav class="navbar">
  <div class="container navbar-content">
    <!-- Brand -->
    <a href="/" class="brand">
      GJNX<span class="highlight">.TECH</span>
    </a>

    <!-- Desktop Menu -->
    <div class="desktop-menu mono">
      {links.map(l => (
        <a href={l.href} class="nav-item">
          {l.label}
        </a>
      ))}
    </div>

    <!-- Actions -->
    <div class="navbar-actions">
      <button id="search-open" class="icon-btn" aria-label="Search">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" x1="21" x2="16.65" y2="16.65"></line></svg>
      </button>
      <button id="follow-open" class="btn-follow mono mobile-hide">FOLLOW</button>
      <!-- Mobile Menu Toggle -->
      <button id="menu-toggle" class="icon-btn mobile-only" aria-label="Menu">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu Panel -->
  <div id="mobile-menu" class="mobile-menu hidden">
    {links.map(l => (
      <a href={l.href} class="mobile-link">{l.label}</a>
    ))}
    <button id="mobile-follow-open" class="btn-follow mono" style="margin-top: 1rem; width: 100%;">FOLLOW</button>
  </div>

  <!-- Search Modal -->
  <div id="search-modal" class="modal-overlay hidden">
    <div class="search-container glass-panel">
      <div class="search-header">
        <span class="mono">> SEARCH_SYSTEM</span>
        <button id="search-close" class="close-btn">×</button>
      </div>
      <div id="search-ui"></div>
      <div class="search-tips mono">
        Press [ESC] to abort / [ENTER] to execute
      </div>
    </div>
  </div>

  <!-- Follow Modal -->
  <dialog id="follow-modal" class="modal">
    <div class="modal-content">
      <button id="follow-close" class="close-btn">×</button>
      <h3 class="mono">> INITIATING_SUBSCRIBE</h3>
      <div class="qr-wrapper">
        <img src="/assets/qrcode.jpg" alt="Silicon Efficiency WeChat QR" width="200" height="200" />
        <div class="scan-line"></div>
      </div>
      <p class="instruction">
        扫描关注 <span class="highlight">【硅基能效】</span> 公众号<br>
        获取最新的深度能效报告与算力地图
      </p>
    </div>
  </dialog>
</nav>

<style>
  .navbar {
    border-bottom: 1px solid rgba(255,255,255,0.1);
    background: rgba(5, 5, 5, 0.85);
    backdrop-filter: blur(12px);
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .navbar-content {
    height: 60px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .brand {
    font-weight: 800;
    font-size: 1.25rem;
    color: var(--c-text-primary);
    text-decoration: none;
    letter-spacing: -0.5px;
  }
  .highlight { color: var(--c-accent-cyan); }

  .desktop-menu {
    display: flex;
    gap: var(--space-6);
  }
  .desktop-menu a {
    color: var(--c-text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.2s;
  }
  .desktop-menu a:hover, .desktop-menu a.active {
    color: var(--c-accent-cyan);
    text-shadow: 0 0 8px rgba(0, 240, 255, 0.4);
  }

  .navbar-actions {
    display: flex;
    gap: var(--space-4);
    align-items: center;
  }

  .icon-btn {
    background: none;
    border: none;
    color: var(--c-text-secondary);
    cursor: pointer;
    padding: 4px;
    transition: color 0.2s;
  }
  .icon-btn:hover { color: var(--c-text-primary); }

  .btn-follow {
    background: transparent;
    border: 1px solid var(--c-accent-cyan);
    color: var(--c-accent-cyan);
    padding: 6px 16px;
    font-size: 0.8rem;
    cursor: pointer;
    transition: all 0.3s;
    border-radius: 2px;
  }
  .btn-follow:hover {
    background: var(--c-accent-cyan);
    color: #000;
    box-shadow: 0 0 15px rgba(0, 240, 255, 0.4);
  }

  .modal-overlay {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(8px);
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding-top: 10vh;
    z-index: 2000;
  }

  .hidden {
    display: none !important;
  }

  .search-container {
    width: 100%;
    max-width: 600px;
    background: #0a0a0a;
    border: 1px solid #333;
    padding: 2rem;
    margin: 0 1rem;
    box-shadow: 0 0 40px rgba(0,0,0,0.5);
  }

  .search-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    color: var(--c-accent-cyan);
    font-size: 0.9rem;
  }

  .search-tips {
    margin-top: 2rem;
    font-size: 0.75rem;
    color: #555;
    text-align: center;
  }

  .close-btn {
    background: none;
    border: none;
    color: #666;
    font-size: 1.5rem;
    cursor: pointer;
  }
  .close-btn:hover { color: white; }

  /* Mobile Menu */
  .mobile-menu {
    position: absolute;
    top: 60px; left: 0; right: 0;
    background: #0a0a0a;
    border-bottom: 1px solid rgba(255,255,255,0.1);
    padding: var(--space-4);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    max-height: calc(100vh - 60px);
    overflow-y: auto;
  }
  .mobile-menu.hidden { display: none; }
  
  .mobile-link {
    color: var(--c-text-primary);
    text-decoration: none;
    font-size: 1.1rem;
    padding: var(--space-2) 0;
    border-bottom: 1px dashed rgba(255,255,255,0.05);
  }

  .mobile-only { display: none; }
  .mobile-hide { display: block; }

  @media (max-width: 768px) {
    .desktop-menu { display: none; }
    .mobile-only { display: block; }
    .mobile-hide { display: none; }
  }

  /* Pagefind Overrides */
  :root {
    --pagefind-ui-primary: var(--c-accent-cyan);
    --pagefind-ui-text: #fff;
    --pagefind-ui-background: #0a0a0a;
    --pagefind-ui-border: #333;
    --pagefind-ui-tag: #111;
  }
</style>

<script>
  let isInitialized = false;

  function initNavbar() {
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');
    const mobileLinks = document.querySelectorAll('.mobile-link');
    const navItems = document.querySelectorAll('.nav-item');
    
    // Mobile Menu Logic
    // Clone node to strip old listeners if elements are reused (ViewTransitions swaps body, so elements are new usually)
    // But strictly speaking, just adding is fine as elements are fresh.
    
    toggle?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });

    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        menu?.classList.add('hidden');
      });
    });

    // Modal Logic (Search & Follow)
    const searchOpen = document.getElementById('search-open');
    const searchClose = document.getElementById('search-close');
    const searchModal = document.getElementById('search-modal');
    
    const followOpen = document.getElementById('follow-open');
    const mobileFollowOpen = document.getElementById('mobile-follow-open');
    const followClose = document.getElementById('follow-close');
    const followModal = document.getElementById('follow-modal') as HTMLDialogElement;

    // Search
    const openSearch = () => {
      searchModal?.classList.remove('hidden');
      if (window.PagefindUI && !document.querySelector('.pagefind-ui')) {
        new window.PagefindUI({ element: "#search-ui", showSubResults: true });
      }
      setTimeout(() => {
        const input = document.querySelector('.pagefind-ui__search-input') as HTMLInputElement;
        input?.focus();
      }, 100);
    };
    
    searchOpen?.addEventListener('click', openSearch);
    searchClose?.addEventListener('click', () => searchModal?.classList.add('hidden'));
    
    // Global ESC Handler - defined once per cleanup cycle could be tricky. 
    // Best way with ViewTransitions: attached to document, but we need to ensure we don't duplicate.
    // We will use a named function to allow removal, but we need to remove PREVIOUS one.
    // However, function reference changes if defined inside initNavbar.
    // So we define it OUTSIDE.
  }

  // Define handler at module scope (stable reference)
  const handleGlobalEsc = (e: KeyboardEvent) => {
    if (e.key === 'Escape') {
      const searchModal = document.getElementById('search-modal');
      const followModal = document.getElementById('follow-modal') as HTMLDialogElement;
      
      if (searchModal && !searchModal.classList.contains('hidden')) {
        searchModal.classList.add('hidden');
      }
      if (followModal && followModal.open) {
        followModal.close();
      }
    }
  };

  // Follow Modal logic needs to be re-bound to new elements
  function initBindFollow() {
    const followOpen = document.getElementById('follow-open');
    const mobileFollowOpen = document.getElementById('mobile-follow-open');
    const footerFollowOpen = document.getElementById('footer-follow-open');
    const followClose = document.getElementById('follow-close');
    const followModal = document.getElementById('follow-modal') as HTMLDialogElement;
    
    const openFollow = () => followModal?.showModal();
    followOpen?.addEventListener('click', openFollow);
    mobileFollowOpen?.addEventListener('click', openFollow);
    footerFollowOpen?.addEventListener('click', openFollow);
    followClose?.addEventListener('click', () => followModal?.close());
  }

  function initActiveState() {
     const navItems = document.querySelectorAll('.nav-item');
     const pathname = window.location.pathname;
     navItems.forEach(link => {
      const href = link.getAttribute('href');
      if (href === '/' && pathname === '/') {
        link.classList.add('active');
      } else if (href !== '/' && pathname.startsWith(href)) {
        link.classList.add('active');
      }
    });
  }

  // Main Entry
  document.addEventListener('astro:page-load', () => {
    initNavbar();
    initBindFollow();
    initActiveState();

    // Event Listener Cleanliness for Window
    window.removeEventListener('keydown', handleGlobalEsc);
    window.addEventListener('keydown', handleGlobalEsc);
  });
</script>

<!-- Pagefind Assets -->
<link href="/pagefind/pagefind-ui.css" rel="stylesheet" is:inline>
<script src="/pagefind/pagefind-ui.js" is:inline></script>

<style is:global>
  /* Follow Modal Styles (Global for Dialog) */
  dialog.modal {
    background: transparent;
    border: none;
    padding: 0;
    margin: auto;
    color: white;
  }
  dialog::backdrop {
    background: rgba(0,0,0,0.8);
    backdrop-filter: blur(4px);
  }
  .modal-content {
    background: #0a0a0a;
    border: 1px solid var(--c-accent-cyan);
    padding: 2rem;
    border-radius: 4px;
    text-align: center;
    position: relative;
    box-shadow: 0 0 50px rgba(0, 240, 255, 0.2);
  }
  .modal-content h3 { color: var(--c-accent-cyan); margin-bottom: 1.5rem; }
  .qr-wrapper { position: relative; display: inline-block; background: white; padding: 10px; border-radius: 4px; }
  .instruction { margin-top: 1.5rem; color: #aaa; font-size: 0.9rem; }
  .scan-line { position: absolute; top: 0; left: 0; width: 100%; height: 2px; background: var(--c-accent-cyan); animation: scan 2s linear infinite; }
  @keyframes scan { 0% { top: 0; } 100% { top: 100%; } }
</style>
